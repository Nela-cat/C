//2
#include<stdio.h>
#include<stdlib.h>
#include<math.h>


 int main(){
     
    int num;
    int p=0;
    int avg; 
    float s=0.0;
    float a =0.0;
     
     
    printf("ile liczb:");
    scanf("%d",&num);
    for (p=0;p<num;p++){ 
    
        printf("wpisz liscby:");
        scanf("%d", &avg);
        if (avg%2==0){
            s= s+avg;
        }else{
            printf("liczby nieparz.\n");
        }
        
}
a=s/num;
printf("śr:%f\n",a);
     
     
     
return 0 ;
 }


//5
#include <stdio.h>
 
int main (void)
{
    int a,b,c,d;
    
    scanf("%d,%d,%d,%d", &a,&b,&c,&d);
    int n = d-c;
    printf("%s\n",(c-b != n || b-a != n)? "False" : "True");
    return 0;
}


////////////////////////////////////
#include <stdio.h>
main ()
{int mass[300],n,i,d;
printf("N=");
scanf("%d",&n);
for (i=0;i<n;i++)
{
printf("x[%d]=",i);
scanf("%d",&mass[i]);
}
d=mass[1]-mass[0];
for (i=2;i<n;i++)
{
if((mass[i]-mass[i-1])!=d) printf("false");
 
else  printf("true");}
}

//6
#include <stdio.h>
int main (){
    int n;
    int x;
    int a=-1;
    float zn;
    int nawias=0;
    int cis3;
    int cis2=1;
    float znam,cis1;
    
    printf("n");
    scanf("%d",&n);
    nawias=(2*n+1);//(2n+1)
    znam=(2*n+1);//(2n+1)
    printf("x");
    scanf("%d",&x);
    
    for (cis1=-1;n>0;cis1*=(n--)){//(-1^n)
        
    }printf("cis1=%f\n",cis1);
    
   
    printf("nawias=%d\n",nawias);
    
    for (cis2;nawias>0;(nawias--)){//(x^2n+1)
        cis2=x*cis2;
        
    }printf("cis2=%d\n",cis2);
    
    cis3=cis1*cis2;//(-1^n)*(x^2n+1)
    printf("cis3=%d\n",cis3);
    
    
    printf("zman=%f\n",znam);
    
    int r;
    for (r = 1; znam > 1; r *= (znam--)){////(2n+1)!
            
        
    }printf("r=%d\n",r);
     
     zn=cis3/r; //((-1^n)*(x^2n+1))/(2n+1)!
     printf("zn=%f\n",zn);

    
    
    return 0;
}  
