///
#include<stdio.h>
#include<stdlib.h>
#include<math.h>


 int main(){
     
    int num;
    int p=0;
    float avg; 
    float s=0.0;
    float a =0.0;
     
     
    printf("ile liczb:");
    scanf("%d",&num);
    while (p<num){
    
        printf("wpisz liscby:");
        scanf("%f", &avg);
        p++;
        s= s+avg;
}
a=s/num;
printf("śr:%f\n",a);
     
     
     
return 0 ;
 }
